<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStatus"
        style="@style/metropolis_regular_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/apple"
        app:layout_constraintTop_toTopOf="@id/tvSubTitle"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Done" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubTitle"
        style="@style/metropolis_regular_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/scorpion"
        app:layout_constraintEnd_toStartOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="25 Years" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvQueue"
        style="@style/metropolis_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/codGray"
        app:layout_constraintTop_toTopOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Queue : 1" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/metropolis_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/codGray"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
        app:layout_constraintStart_toStartOf="@id/tvSubTitle"
        app:layout_constraintEnd_toStartOf="@id/tvQueue"
        tools:text="Sanjeev Arora" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/heather"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginTop="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>