    <style name="MaterialButtonBaseStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/azure_radiance</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/proximanova_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="MaterialButtonStrokeBorder" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/azure_radiance</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">6dp</item>
